<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Mini Message Board</h1>
    <ul>
      <% messages.forEach(message => { %>
        <li>
          <div class="message-info">
            <strong><%= message.user %>:</strong> <%= message.text %> 
            <em>(<%= message.added.toLocaleString() %>)</em>
          </div>
          <div class="message-actions">
            <a href="/message/<%= message.id %>">Open</a>
            <a href="/edit/<%= message.id %>">Edit</a>
            <form method="POST" action="/delete/<%= message.id %>">
              <button type="submit">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>    
    <a class="btn-primary" href="/new">New Message</a>
  </div>
</body>
</html>